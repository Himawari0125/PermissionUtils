<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    >

    <WebView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/webView"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21项身体数据"
        android:textSize="22dp"
        android:id="@+id/title_tv"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/gifView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全面知晓身体状况"
        android:layout_marginTop="10dp"
        android:textColor="#757575"
        android:textSize="15dp"
        android:id="@+id/detail_tv"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/title_tv"/>

    <com.himawari.permissionUtils.views.PointView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:pointSize="4"
        android:id="@+id/pointView"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/detail_tv"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/dengluzhuce_beijing_button"
        android:text="@string/loginoregister"
        android:textColor="@color/background_white"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>